@model IEnumerable<GummiBears.Models.Product>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
<hr />

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var listProduct in Model)

    {
    <tr>
        <td><img class="resize" src=@listProduct.ImageUrl alt="Gummy Candy" /></td>
        <td>@Html.DisplayFor(modelProduct => listProduct.Name)</td>
        <td>@Html.DisplayFor(modelProduct => listProduct.Description)</td>
        <td><span>$</span>@Html.DisplayFor(modelProduct => listProduct.Cost)</td>
        <td>
            @Html.ActionLink("Review", "Create", "Reviews", "Review", new { id = listProduct.ProductId }) |
            @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
            @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
            @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
        </td>
    </tr>

    }


</table>

@Html.ActionLink("Add new Product", "Create") | 
@Html.ActionLink("Delete all Products", "DeleteAll")
